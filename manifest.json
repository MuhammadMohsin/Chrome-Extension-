{
    "manifest_version": 2,
    "name": "SampleExtemsion",
    "version": "2.0",
    "description": "Sample chrome extension",

    "browser_action": {},
    "background": {
        "scripts": ["src/js/browser-polyfill.min.js", "background/background.js"],
        "persistent": false
    },
    "permissions": [
        "tabs",
        "tabCapture",
        "activeTab",
        "contextMenus",
        "webNavigation",
        "notifications",
        "storage",
        "management"
    ],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "all_frames": true,
        "js": ["src/js/browser-polyfill.min.js", "content-script/contentScript.js"]
    }]
}
